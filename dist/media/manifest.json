{
"manifest_version": 3,
"name": "clarinha",
"description": "clarinha extension",
"version": "1.0",
"icons": {
"128": "icon.png"
},
"background": {
	"service_worker": "background.js"
},
"permissions": ["scripting", "activeTab","storage"],
"action": {
	"default_popup":"popup.html",
	"default_icon":{
		"128":"icon.png"
	}
}
